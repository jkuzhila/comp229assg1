<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
  <div class="row">
  <div class="col">
    
  <div class="row">
      <div class="col-md-offset-1 col-md-11">
          <h1><% = title %></h1>
          <% if (typeof displayName == 'string' && displayName){%>
          <a href="/book-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Book</a>
            <%} %>
          <br>
          <table class="table table-bordered table-striped table-hover">
              <!-- header row -->
              <tr class="d-flex">
              <% if (typeof displayName == 'string' && displayName){%>
                  <th class="text-center col-2">title</th>
                  <th class="text-center col-2">Author</th>
                  <th class="text-center col-1">year</th>
                  <th class="col-4">Description</th>
                  <th class="text-center col-1">Price</th>
                  
                  <th class="text-center col-1"></th>
                  <th class="text-center col-1"></th>
                   <%} else {%>
                    <th class="text-center col-2">title</th>
                  <th class="text-center col-2">Author</th>
                  <th class="text-center col-1">year</th>
                  <th class="col-6">Description</th>
                  <th class="text-center col-1">Price</th>
                  
                
                   <%}%>
              </tr>

              <!-- repeat template row -->
              <% for(let count = 0; count < BookList.length; count++){%>
                  <tr class="d-flex">
                  <% if (typeof displayName == 'string' && displayName){%>
                  <td class="text-center col-2"><% = BookList [count].name %</td>
                  <td class="text-center col-2"><% = BookList [count].author %</td>
                  <td class="text-center col-1"><% = BookList [count].published %</td>
                  <td class="col-4"><% = BookList [count].description %</td>
                  <td class="text-center col-1"><% = BookList [count].name price %</td>
                  
                  <td class="text-center col-1">
                           <a href="/book-list/edit/<% = BookList [count].id %>"class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i>Edit
                        </a>
                  </td>
                  <td class="text-center col-1">
                      <a href="/book-list/delete/<% = BookList [count].id %>" class="btn btn-danger btn-sm">
                        <i class="fas fas-trash-alt"></i>Delete</a>

                  </td>
                  <%} else {%>
                  <td class="text-center col-2"><% = BookList [count].name %</td>
                  <td class="text-center col-2"><% = BookList [count].author %</td>
                  <td class="text-center col-1"><% = BookList [count].published %</td>
                  <td class="col-6"><% = BookList [count].description %</td>
                  <td class="text-center col-1"><% = BookList [count].name price %</td>
                    <%} %>
                  </tr>
              <%}
          </table>
      </div>
  </div>
  

    
</div>
    </div>

    <div class="row row justify-content-md-center">
  <div class="col-6">

      <hr class="my-4">
     <p><h2>Welcome to my page. My goal is to learn and experience new things every day. Make good use of time management.</h2></p>

  </div>

  </div>
  </main>
  
